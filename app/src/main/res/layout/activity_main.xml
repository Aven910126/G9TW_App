<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/messageimage_1653581509977"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/login"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginEnd="72dp"
        android:background="@drawable/login1_"
        android:fontFamily="@font/baloo_tammudu"
        android:text="LOGIN"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/hebtbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.225" />

    <Button
        android:id="@+id/reg"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/login1_"
        android:fontFamily="@font/baloo_tammudu"
        android:text="REG"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/login"
        app:layout_constraintHorizontal_bias="0.415"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.225" />

    <Button
        android:id="@+id/live"
        android:layout_width="184dp"
        android:layout_height="221dp"
        android:layout_marginTop="188dp"
        android:background="@drawable/live"
        app:layout_constraintBottom_toTopOf="@+id/emycbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/emycbtn"
        android:layout_width="175dp"
        android:layout_height="214dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/energe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/hebtbtn"
        app:layout_constraintHorizontal_bias="0.738"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/hebtbtn"
        android:layout_width="209dp"
        android:layout_height="257dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/heart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btngps"
        android:layout_width="161dp"
        android:layout_height="198dp"
        android:background="@drawable/gps"
        app:layout_constraintBottom_toTopOf="@+id/hebtbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.868"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login"
        app:layout_constraintVertical_bias="0.985" />


</androidx.constraintlayout.widget.ConstraintLayout>